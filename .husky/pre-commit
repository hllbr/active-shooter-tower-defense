#!/usr/bin/env sh

echo "ğŸ” Running pre-commit checks..."

# Run type check first
echo "ğŸ“ Type checking..."
npm run type-check
TYPE_CHECK_EXIT_CODE=$?

if [ $TYPE_CHECK_EXIT_CODE -ne 0 ]; then
  echo "âŒ Type check failed! Commit blocked."
  exit 1
fi

# Run linting with warnings allowed
echo "ğŸ” Linting..."
npm run lint:check
LINT_EXIT_CODE=$?

if [ $LINT_EXIT_CODE -ne 0 ]; then
  echo "âŒ Linting failed with errors! Commit blocked."
  exit 1
fi

echo "âœ… Pre-commit checks passed! Commit allowed."
